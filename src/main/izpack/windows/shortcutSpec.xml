<shortcuts> 
   <programGroup defaultName="D-Lite" location="applications"/>
   <shortcut name="D-Lite ${project.version}"
             target="$INSTALL_PATH/d-lite.exe"
             description="MultiBit" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multibit.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall D-Lite ${project.version}"
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiBit" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>